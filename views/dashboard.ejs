<html>
<head>
</head>	
<body style="background-color: #7CE9FB"><br><br>
	<form method="get" action="/home">
		<input type="submit" name="home" value="HOME" style="padding: 7px 20px;font-size: 1.06em;background-color: #0796cf;color: #fff;border: 1px solid #0285b9;cursor: pointer;margin-top: 4px; margin-left: 1300px">
	</form>
	<br>
	<center><h1 class="greeting">INVITATIONS RECEIVED</h1></center>
	<br>
	<center><strong>Note:</strong>Please reload the page to see the changes made</center><br><br>
	<div>
		<% for(var i=0; i<contacts.length; i++) {%>
			<div style="background-color: white; margin-right: 200px; margin-left: 200px; border: solid;"><center>
               	<font>Sender Roll number: <%= contacts[i].rollnumber %></font>
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               	<font>Sender Name: <%= contacts[i].username %></font>
               	<font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font><br><br>
               	
               	<div style="font-family: <%= contacts[i].invheader_font %>; font-size: <%= contacts[i].invheader_size %>; "><%= contacts[i].invheader %></div><br><br>
				<div style="font-family: <%= contacts[i].invbody_font %>; font-size: <%= contacts[i].invbody_size %>; "><%= contacts[i].invbody %></div><br><br>
				<div style="font-family: <%= contacts[i].invfooter_font %>; font-size: <%= contacts[i].invfooter_size %>; "><%= contacts[i].invfooter %></div><br><br>

				<form method="post" action="/accept" class="accept">
               		<input type="submit" id="accepted" value="ACCEPT">
               		<input type="hidden" id="sender_rno" name="sender_rno" value="<%= contacts[i].rollnumber %>">
               		<input type="hidden" id="inv_name" name="inv_name" value="<%= contacts[i].invitationname %>"></form>
                
                <form method="post" action="/reject" class="reject">
               		<input type="submit" id="rejected" value="REJECT">
               		<input type="hidden" id="sender_rno" name="sender_rno" value="<%= contacts[i].rollnumber %>">
               		<input type="hidden" id="inv_name" name="inv_name" value="<%= contacts[i].invitationname %>"></form>
				
				<font>Your decision: <%= contacts[i].decision %></font>
			</center></div><br><br>
        <% } %>
	</div>
</body>
</html>